algoritmo "semnome"
// Função :
// Autor :
// Pratica 02
// Numeros pares decrescente
var
    cont, v:Inteiro
inicio
      Escreval("Digite um valor: ")
      Leia(v)
      
      Se(v%2 = 1) entao
             V <- v - 1
      FimSe
      
      Para cont <- v ate 0 passo -2 faca
             Escreval(cont)
      FimPara
      
fimalgoritmo
